<project name="nuxeo-assembly" default="build" xmlns:nx="urn:nuxeo-build"
  xmlns:artifact="urn:nuxeo-artifact">
  <taskdef resource="org/nuxeo/build/antlib.xml" uri="urn:nuxeo-build" />
  <taskdef resource="org/nuxeo/build/artifact/antlib.xml"
    uri="urn:nuxeo-artifact" />

  <target name="build"
    description="Build Nuxeo Smart Search Marketplace package">
    <artifact:nuxeo-expand />

    <delete failonerror="false"
      dir="${maven.project.build.directory}/marketplace" />
    <mkdir dir="${maven.project.build.directory}/marketplace" />

    <copy todir="${maven.project.build.directory}/marketplace/install/bundles"
      overwrite="true">
      <artifact:set>
        <includes>
          <artifact artifactId="nuxeo-platform-smart*" />
        </includes>
        <excludes>
          <artifact type="pom" />
        </excludes>
      </artifact:set>
    </copy>

    <!-- sample to retrieve all modules and libs from deps -->
    <!-- 
      <copy todir="${maven.project.build.directory}/marketplace/install/bundles"
      overwrite="true">
      <artifact:set>
      <includes>
      <artifact groupId="org.nuxeo*" />
      </includes>
      <excludes>
      <artifact type="pom" />
      </excludes>
      </artifact:set>
      </copy>
      <copy todir="${maven.project.build.directory}/marketplace/lib"
      overwrite="true">
      <artifact:set>
      <includes>
      <artifact groupId="!org.nuxeo*" />
      </includes>
      </artifact:set>
      </copy>
    -->

    <copy todir="${maven.project.build.directory}/marketplace">
      <fileset dir="src/main/resources" />
      <filterset>
        <filter token="VERSION" value="${smart.search.marketplace.version}" />
        <filter token="DISTRIB_VERSION" value="${nuxeo.distribution.version}" />
        <filter token="TARGET_VERSION" value="${nuxeo.target.version}" />
      </filterset>
    </copy>
    <zip
      destfile="${maven.project.build.directory}/${maven.project.artifactId}-${smart.search.marketplace.version}.zip"
      basedir="${maven.project.build.directory}/marketplace" />
    <artifact:attach
      file="${maven.project.build.directory}/${maven.project.artifactId}-${smart.search.marketplace.version}.zip"
      target="${maven.project.groupId}:${maven.project.artifactId}" type="zip" />
  </target>

</project>
